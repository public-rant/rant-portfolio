---
const title = "Richard Massey"
import { getCollection } from 'astro:content';
import Layout from '../components/Layout.astro'
const collection = await getCollection('drafts', ({ data }) => {
  return `${data.draft}` === import.meta.env.DRAFTS;
});
---

<Layout title={title}>
  <h1 class="title text-2xl" slot="title">{title}</h1>
  <ul slot="navigation">
  {collection.map(draft => (
    <li>
      <a href={draft.data.slug}>
        <figure class="flex mt-4">
          <img class="inline" src=`/${draft.data.slug}.png` />
          <figcaption class="inline p-8">{draft.data.title}</figcaption>
        </figure>
      </a>
    </li>
  ))}
  </ul>
</Layout>
